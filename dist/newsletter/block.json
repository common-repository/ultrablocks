{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "ultrablocks/newsletter",
  "version": "0.0.2",
  "title": "Newsletter",
  "category": "ultrablocks",
  "description": "Newsletter block for UltraBlocks",
  "example": {},
  "attributes": {
    "blockId": {
      "type": "string"
    },
    "layoutType": {
      "type": "string",
      "default": "button-inside"
    },
    "placeholder": {
      "type": "string",
      "default": "Enter your email"
    },
    "buttonType": {
      "type": "string",
      "default": "textIcon"
    },
    "showIcon": {
      "type": "boolean",
      "default": true
    },
    "buttonIcon": {
      "type": "string",
      "default": "<svg class=\"ultrablocks-svg-icon ultrablocks-svg-icon-fa\" aria-hidden=\"true\" role=\"img\" xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 512 512\"><path fill=\"currentColor\" d=\"M16.1 260.2c-22.6 12.9-20.5 47.3 3.6 57.3L160 376V479.3c0 18.1 14.6 32.7 32.7 32.7c9.7 0 18.9-4.3 25.1-11.8l62-74.3 123.9 51.6c18.9 7.9 40.8-4.5 43.9-24.7l64-416c1.9-12.1-3.4-24.3-13.5-31.2s-23.3-7.5-34-1.4l-448 256zm52.1 25.5L409.7 90.6 190.1 336l1.2 1L68.2 285.7zM403.3 425.4L236.7 355.9 450.8 116.6 403.3 425.4z\"></path></svg>"
    },
    "buttonIconPosition": {
      "type": "string",
      "default": "right"
    },
    "showButtonText": {
      "type": "boolean",
      "default": true
    },
    "buttonText": {
      "type": "string",
      "default": "Subscribe"
    },
    "style": {
      "type": "object",
      "default": {}
    },
    "inputStyle": {
      "type": "object",
      "default": {},
      "selector": ".ub-newsletter-control .ub-form-input"
    },
    "inputStyleFocus": {
      "type": "object",
      "default": {},
      "selector": ".ub-newsletter-control .ub-form-input:focus"
    },
    "buttonStyle": {
      "type": "object",
      "default": {},
      "selector": ".ub-form-submit-btn .ub-form-btn"
    },
    "buttonStyleHover": {
      "type": "object",
      "default": {},
      "selector": ".ub-form-submit-btn:hover .ub-form-btn"
    },
    "styleButtonGap": {
      "type": "object",
      "default": {},
      "selector": ".ub-form-submit-btn .ub-form-btn"
    },
    "buttonIconSpacing": {
      "type": "object",
      "default": {},
      "selector": ".ub-newsletter-control .ultrablocks-component-icon-picker-preview"
    },
    "showMessage": {
      "type": "boolean",
      "default": false
    },
    "successMessage": {
      "type": "string",
      "default": "Thank you for subscribing!"
    },
    "errorMessage": {
      "type": "string",
      "default": "Please enter a valid email address"
    },
    "subscribedMessage": {
      "type": "string",
      "default": "You are already subscribed"
    },
    "styleMessages": {
      "type": "object",
      "default": {},
      "selector": ".ub-newsletter .ub-newsletter-message-wrapper > span"
    },
    "styleMessageSuccess": {
      "type": "object",
      "default": {},
      "selector": ".ub-newsletter .ub-newsletter-message-success"
    },
    "styleMessageError": {
      "type": "object",
      "default": {},
      "selector": ".ub-newsletter .ub-newsletter-message-error"
    },
    "styleMessageSubscribed": {
      "type": "object",
      "default": {},
      "selector": ".ub-newsletter .ub-newsletter-message-warning"
    }
  },
  "textdomain": "ultrablocks",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css",
  "viewScript": "file:./view.js",
  "supports": {
    "className": true,
    "html": false,
    "anchor": true,
    "align": true,
    "alignWide": true
  }
}